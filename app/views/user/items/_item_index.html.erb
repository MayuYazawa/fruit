<div class= "row">
  <% items.each do |item| %>
    <div class= "col-md-3">
      <div class= "item-box">
        <!--アイテムリンク-->
        <div class= "item-image">
          <!-- attachment_image_tag(item, :image, size: '180×120', fallback: "脱出ケーキ") -->
        </div>
        <div class= "item_name-without_tax">
          <div class= "item_name">
            <%= item.name %>
          </div>
          <div class= "without_tax">
            <%= (item.without_tax * 110 / 100).to_s(:delimited) %>(税込)
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>