<div class="container" style="margin-top:25px;">
  <div class="public-registrations">
    <div class="public-registrations-title">
      <h4><b>新規会員登録</b></h4>
    </div>

    <div class="public-registrations-table">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table>
          <tr class="public-registrations-field">
            <th><span>名前</span></th>
            <td><%= f.label :"(姓)" %></td>
            <td><%= f.text_field :last_name, size: 25, class: "textlines-radius" %></td>
            <td><%= f.label :"(名)" %></td>
            <td><%= f.text_field :first_name, size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr class="public-registrations-field">
            <th><span>フリガナ</span></th>
            <td><%= f.label :"(セイ)" %></td>
            <td><%= f.text_field :kana_last, size: 25, class: "textlines-radius" %></td>
            <td><%= f.label :"(メイ)" %></td>
            <td><%= f.text_field :kana_first, size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr class="public-registrations-field">
            <th><%= f.label :"メールアドレス" %></th>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, size: 25, autocomplete: "email", class: "textlines-radius" %></td>
          </tr>

          <tr>
            <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <td></td>
            <td><%= f.text_field :post_code, size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr>
            <th><%= f.label :"住所" %></th>
            <td></td>
            <td colspan="3"><%= f.text_field :address, size: 70, class: "textlines-radius" %></td>
          </tr>

          <tr>
            <th><%= f.label :"電話番号(ハイフンなし)" %></th>
            <td></td>
            <td><%= f.text_field :telephone, size: 25, class: "textlines-radius" %></td>
          </tr>


          <tr class="public-registrations-field">
            <th>
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %>文字以上)
              <% end %>
            </th>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password", size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :"パスワード(確認用）" %></th>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr class="public-registrations-actions">
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>

    <%= render "public/shared/links" %>
    <br>
  </div>
</div>