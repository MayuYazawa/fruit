<div class="container my-2 py-4">
  <div class="row my-4">
    <h3 class="col-2 text-center"><b>マイページ</b></h3>
  </div>

  <div class="row mb-1">
    <h5 class="col-2">登録情報</h5>
    <%= link_to "編集する", users_information_edit_path, class: "btn btn-sm btn-success px-4" %>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= @user.last_name + " " + @user.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @user.kana_last + " " + @user.kana_first %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @user.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @user.telephone %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-4">
    <h5 class="col-2">配送先</h5>
    <%= link_to "一覧を見る", deliveries_path, class: "btn btn-sm btn-primary px-4" %>
  </div>
  <div class="row mt-3">
    <h5 class="col-2">注文履歴</h5>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary px-4" %>
  </div>