<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto mb-3">
      <h4><%= @user.last_name %><%= @user.first_name %>さんの会員情報編集</h4>
    </div>
  </div>
  <div class="row-sm-8 px-sm-0 mx-auto">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-borderless text-secondary">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tboby>
      </table>
    </div>
  </div>
  <div class="row-sm-8 px-sm-0 mx-auto">
    <%= form_with model: @user, url: admin_customer_path, local:true do |f| %>
    <div class="form-group col-sm-10 px-sm-0 mx-auto">
      <%= f.label :"氏名", class: "col-sm-3 control-label" %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group col-sm-10 px-sm-0 mx-auto">
      <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
      <%= f.text_field :kana_last %>
      <%= f.text_field :kana_first %>
    </div>
    <div class="form-group col-sm-10 px-sm-0 mx-auto">
      <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
      <%= f.text_field :post_code, class: "col-sm-2 form-control-static" %>
    </div>
    <div class="form-group col-sm-10 px-sm-0 mx-auto">
      <%= f.label :"住所", class: "col-sm-3 control-label" %>
      <%= f.text_field :address, class: "col-sm-8 form-control-static" %>
    </div>
    <div class="form-group col-sm-10 px-sm-0 mx-auto">
      <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
      <%= f.text_field :telephone, class: "col-sm-2 form-control-static" %>
    </div>
    <div class="form-group col-sm-10 px-sm-0 mx-auto">
      <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
    </div>

    <div class="form-group col-sm-10 px-sm-0 mx-auto">
      <%= f.label :"会員ステータス", class: "col-sm-3 control-label" %>
      <%= f.radio_button :is_deleted, false, checked: true %><%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会" %>
    </div>
    <div class="actions col-sm-10 px-sm-0 mx-auto text-center">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
