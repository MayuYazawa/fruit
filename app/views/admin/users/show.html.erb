<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h4 class="mb-3"><b><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</b></h4>
      <table class='table text-secondary'>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @user.last_name %>  <%= @user.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @user.kana_last %>  <%= @user.kana_first %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @user.post_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @user.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @user.telephone %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <% if @user.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-muted font-weight-bold">退会</td>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <th>
              <%= link_to "編集する", edit_admin_uaer_path(@user.id), class: 'btn btn-success' %>
              <%= link_to "注文履歴一覧を見る", admin_path, class: 'btn btn-info' %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>