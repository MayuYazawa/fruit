<div class="container">

  <div class="row"  style="margin-top:25px;">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>商品編集</h4>
    </div>
  </div>
  <div class="row ml-5" style="margin-bottom:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
        <table class="table table-borderless text-secondary">
          <tr>
            <th><%= f.label :item_image, "商品画像" %></th>
            <td><%= f.file_field :item_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label :item_name, "商品名" %></th>
            <td><%= f.text_field :item_name, :placeholder => "商品名", size: 47 %></td>
          </tr>
          <tr>
            <th><%= f.label :item_caption, "商品説明" %></th>
            <td><%= f.text_area :item_caption, :placeholder => "ここに説明文を記述します", size: "50x3" %></td>
          </tr>
          <tr>
            <th><%= f.label :genre_id, "ジャンル" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name, {include_blank: "--選択してください--"} %></td>
          </tr>
          <tr>
            <th><%= f.label :without_tax, "税抜価格" %></th>
            <td><%= f.number_field :without_tax, :placeholder => "1000" %>円</td>
          </tr>
          <tr>
            <th><%= f.label :sale_status, "販売ステータス" %></th>
            <td>
              <%= f.radio_button :sale_status, :true %>
              <%= f.label :sale_status_sale, "販売中" %>
              <%= f.radio_button :sale_status, :false %>
              <%= f.label :sale_status_stop_sale, "販売停止中" %>
            </td>
          </tr>
        </table>
        <%= f.submit "変更を保存", class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>